<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE hibernate-configuration PUBLIC  
        "-//Hibernate/Hibernate Configuration DTD 5.3//EN"  
        "http://www.hibernate.org/dtd/hibernate-configuration-5.3.dtd">  
<hibernate-configuration>  
    <session-factory>  
            
    <property name="hbm2ddl.auto">update</property>    
        <property name="dialect">org.hibernate.dialect.HSQLDialect</property>    
        <property name="connection.url">jdbc:hsqldb:file:E:/Workspace/SampleCMS/dbfile/ggdb</property>
        <property name="connection.username">sa</property>    
        <property name="connection.password"></property>    
        <property name="connection.driver_class">org.hsqldb.jdbcDriver</property>   
       
        <mapping class="model.Book"/>
        <mapping class="model.Human"/>
        <mapping class="model.MusicEquipment"/>
        <mapping class="model.Sales"/>
        <mapping class="model.School"/>
        <mapping class="model.Staff"/>
        <mapping class="model.Stock"/>
        <mapping class="model.Student"/>
        <mapping class="model.Subject"/>
        <mapping class="model.Teacher"/>
    </session-factory>  
</hibernate-configuration>  